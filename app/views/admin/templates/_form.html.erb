<%= form_with model: [:admin, @template], local: true do |f| %>
<div class="form-group row">
	<%= f.label :title, 'Заголовок договора', class:"col-sm-2 col-form-label" %>
	<div class="col-sm-10">
		<%= f.text_field :title, class:"form-control" %>
	</div>
</div>
<%= f.submit @template.new_record? ? 'Создать' : 'Изменить', class:'btn btn-primary' %>
<% end %>