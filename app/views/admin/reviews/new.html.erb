<h2>Написать рецензию</h2><br>
<h5>Рецензия на домашку <%= @lesson.theme.title%></h5>
<%= form_with model: [:admin, @review], url: admin_lesson_reviews_path, local: true do |f| %>
<div class="form-group row">
	<%= f.label :title, 'Тема рецензии', class:"col-sm-2 col-form-label" %>
	<div class="col-sm-10">
		<%= f.text_field :title, class:"form-input" %>
	</div>
</div>
<div class="form-group row">
	<%= f.label :content, 'Содержание рецензии', class:"col-sm-2 col-form-label" %>
	<div class="col-sm-10">
		<%= f.text_area :content, class:"tinymce" %>
	</div>
	<%= tinymce %>
</div>

<div class="form-group row">
	<% f.label :date, 'Дата рецензии', class:"col-sm-2 col-form-label" %>
	<div class="col-sm-10">
		<%= f.hidden_field Date.today, class:"form-input" %>
	</div>
</div>
<div class="form-group row">
	<%= f.label :rate, 'Оценка за домашку', class:"col-sm-2 col-form-label" %>
	<div class="col-sm-10">
		<%= f.number_field :rate, class:"form-input", step: :any%>
	</div>
</div>


<div class="form-group row">
	<% f.label :lesson_id, 'Тема урока', class:"col-sm-2 col-form-label" %>
	<div class="col-sm-10">
		<%= f.hidden_field :lesson_id, value: @lesson.id%>
	</div>
</div>
<div class="form-group row">
	<% f.label :homework_id, 'Тема домашки', class:"col-sm-2 col-form-label" %>
	<div class="col-sm-10">
		<%= f.hidden_field :homework_id, value: 3%>
	</div>
</div>
<div>
	<%= f.submit%>
</div>
<% end %>
