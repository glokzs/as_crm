
<%= form_with model: [:admin, @review], url: admin_lesson_review_path, local: true do |f| %>
<% if @review.errors.any? %>
<div id="error_explanation">
  <h2><%= pluralize(@review.errors.count, "error") %> prohibited this review from being saved:</h2>

  <ul>
    <% @review.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>

<div class="form-group row">
	<%= f.label :content, 'Содержание рецензии', class:"col-sm-2 col-form-label" %>
	<div class="col-sm-10">
		<%= f.text_area :content, class:"tinymce" %>
	</div>
	<%= tinymce %>
</div>

<div class="form-group row">
	<%= f.hidden_field :date %>
	<div class="col-sm-10">
		<%= f.hidden_field :date, class:"form-input" %>
	</div>
</div>
<div class="form-group row">
	<%= f.label :rate, 'Оценка за домашку', class:"col-sm-2 col-form-label" %>
	<div class="col-sm-10">
		<%= f.number_field :rate, class:"form-input", step: :any%>
	</div>
</div>
<div>
	<%= f.submit %>
</div>
<% end %>
