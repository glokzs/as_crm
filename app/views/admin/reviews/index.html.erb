<h5>Рецензии на тему <%="#{@lesson.theme.title}"%></h5>
<table class="table-striped w-100 mt-4">
	<tr>
		<th>ФИО студента</th>
		<th>Оценка за рецензию</th>
		<th>Рецензия</th>
	</tr>
	<% @reviews.each do |review| %>
	<tr>
		<td><%= "#{review.homework.student.first_name} #{review.homework.student.last_name}" %></td>
		<td><%= review.rate%></td>
		<td><% if review.content.nil? %>
			<%= link_to "Создать рецензию",new_admin_lesson_review_path%>
			<%else%>
			<%= link_to "Редактровать рецензию",edit_admin_lesson_review_path(@lesson,review) %>
			<%end%>
		</td>
		<%end%>
	</tr>
</table>