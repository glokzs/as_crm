<p id="notice"><%= notice %></p>

<h2>Список занятий</h2>
<table class="table-striped w-100 mt-4">
	<tr>
		<th>Тема занятия</th>
		<th>Дата занятия</th>
		<th>Название группы</th>
		<th>Дата дедлайна</th>
		<th colspan="3">Действия</th>
	</tr>
<% @lessons.each do |lesson| %>
	<tr>
		<td><%= lesson.theme.title %></td>
		<td><%= lesson.date %></td>
		<td><%= lesson.group.name %></td>
		<td><%= lesson.deadline.strftime("%Y-%m-%d в 19:30") if lesson.deadline%></td>
		<td>
			<%= link_to (fa_icon "edit"), edit_admin_lesson_path(lesson) %>
		</td>
	</tr>

<% end %>
</table>