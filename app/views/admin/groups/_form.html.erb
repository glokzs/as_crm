<%= form_with model: [:admin, @group], local: true, id: "new_group" do |f| %>

<% if @group.errors.any? %>
<div id="error_explanation">
  <h2><%= pluralize(@group.errors.count, "error") %> prohibited this group from being saved:</h2>

  <ul>
    <% @group.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>

<div class="form-group row">
	<%= f.label :name, 'Название', class:"col-sm-2 col-form-label" %>
	<div class="col-sm-10">
		<%= f.text_field :name, class:"form-control" %>
	</div>
</div>
<div class="form-group row">
	<%= f.label :course_id, 'Курс', class:"col-sm-2 col-form-label" %>
	<div class="col-sm-10">
		<%= f.select(:course_id, Course.all.collect {|c| [c.name, c.id]}, { :prompt => 'Выбрать' }, { :class => 'form-control' }) %>
	</div>
</div>
<div class="form-group row">
	<%= f.label :start, 'Дата начала', class:"col-sm-2 col-form-label" %>
	<div class="col-sm-10">
		<%= f.date_field :start, class:"form-input" %>
	</div>
</div>
<div class="form-group row">
	<%= f.label :end, 'Дата окончания', class:"col-sm-2 col-form-label" %>
	<div class="col-sm-10">
		<%= f.date_field :end, class:"form-input" %>
	</div>
</div>
<div>
	<%= f.submit @group.new_record? ? 'Создать' : 'Изменить', class:'btn btn-primary' %>
</div>
<% end %>