<h2>Список групп</h2>
<table class="table-striped w-100 mt-4">
	<tr>
		<th>Название группы</th>
		<th colspan="3">Действия</th>
	</tr>
<% @groups.each do |group| %>
	<tr>
		<td><%= group.name %></td>
		<td>
			<%= link_to 'Редактировать', edit_admin_group_path(group) %>
			<%= link_to 'Удалить' %>
		</td>
	</tr>

<% end %>
</table>