<h2>Список преподователей</h2>
<table class="table-striped w-100 mt-4">
	<tr>
		<th>Имя</th>
		<th>Email</th>
		<th>Тел</th>
		<th>Тел(2)</th>
		<th>Группа</th>
		<th colspan="3">Действия</th>
	</tr>
<% @teachers.each do |teacher|%>
	<tr>
		<td><%= link_to "#{teacher.first_name} #{teacher.last_name}", admin_teacher_path(teacher)%></td>
		<td><%= teacher.email %></td>
		<td><%= teacher.tel_1 %></td>
		<td><%= teacher.tel_2 %></td>
		<td>
			<%= link_to 'Редактировать', edit_admin_teacher_path(teacher) %>
			<%= link_to 'Удалить' %>
		</td>
	</tr>

<% end%>
</table>
