<%= form_with model: [:admin, @section], local: true do |f| %>
<div class="form-group row">
	<%= f.label :number, 'Номер раздела', class:"col-sm-2 col-form-label" %>
	<div class="col-sm-10">
		<%= f.text_field :number, class:"form-control"%>
	</div>
</div>
<div class="form-group row">
	<%= f.label :title, 'Имя раздела', class:"col-sm-2 col-form-label" %>
	<div class="col-sm-10">
		<%= f.text_field :title, class:"form-control"%>
	</div>
</div>
<div class="form-group row">
	<%= f.label :template_id, 'Шаблон', class:"col-sm-2 col-form-label" %>
	<div class="col-sm-10">
		<%= f.select(:template_id, @templates.collect {|t| [t.title, t.id]}, { :prompt => 'Выбрать' }, { :class => 'form-control' }) %>
	</div>
</div>
<%= f.submit @section.new_record? ? 'Создать' : 'Изменить', class:'btn btn-primary' %>
<% end %>
