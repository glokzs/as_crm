<%= form_with model: [:admin, @course], local: true, id: "new_course" do |f| %>
<div class="form-group row">
	<%= f.label :name, 'Название', class:"col-sm-2 col-form-label" %>
	<div class="col-sm-10">
		<%= f.text_field :name, class:"form-control" %>
	</div>
</div>
<div>
	<%= f.submit @course.new_record? ? 'Создать' : 'Изменить', class:'btn btn-primary' %>
</div>
<% end %>