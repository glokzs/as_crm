<h2>Пользователи</h2>
<table class="table-striped w-100 mt-4">
	<tr>
		<th>Имя</th>
		<th>Email</th>
		<th>Тел</th>
		<th>Тел(2)</th>
		<th colspan="3">Действия</th>
	
	</tr>
<% @students.each do |student|%>
	<tr>
		<td><%= link_to "#{student.first_name} #{student.last_name}", admin_student_path(student)%></td>
		<td><%= student.email %></td>
		<td><%= student.tel_1 %></td>
		<td><%= student.tel_2 %></td>
		
		<td>
			<%= link_to (fa_icon "edit"), edit_admin_student_path(student), class:"font" %>
			<%= link_to (fa_icon "trash"), admin_student_path(student), class:"font" %>

			<% if student.contract.present? %>
				<%= link_to 'Смотреть договор', admin_contracts_path << "/#{student.contract.number}-#{student.last_name}-#{student.group.name}-#{student.contract.date}.pdf"  %>
			<% else %>
				<%= link_to 'Сформировать договор', admin_contracts_path(student_id: student), method: :post%>
			<% end %>

		</td>
	</tr>
<% end%>
<% @teachers.each do |teacher| %>
	<tr>
		<td><%= link_to "#{teacher.first_name} #{teacher.last_name}", admin_teacher_path(teacher)%></td>
		<td><%= teacher.email %></td>
		<td><%= teacher.tel_1 %></td>
		<td><%= teacher.tel_2 %></td>
		<td>
			<%= link_to (fa_icon "edit"), edit_admin_teacher_path(teacher), class:"font" %>
			<%= link_to (fa_icon "trash"), admin_teacher_path(teacher), class:"font" %>
		</td>
	</tr>
<%end%>
</table>

