<table class="table-striped w-100 mt-4">
	<tr>
		<th>Имя</th>
		<th>Email</th>
		<th>Тел</th>
		<th>Тел(2)</th>
		<th>Группа</th>
		<th colspan="3">Действия</th>
	</tr>
<% @students.each do |student|%>
	<tr>
		<td><%= link_to "#{student.first_name} #{student.last_name}", admin_student_path(student)%></td>
		<td><%= student.email %></td>
		<td><%= student.tel_1 %></td>
		<td><%= student.tel_2 %></td>
		<td><%= student.group_id %></td>
		<td>
			<%= link_to 'Редактировать', edit_admin_student_path(student) %>
			<%= link_to 'Удалить' %>
		</td>
	</tr>

<% end%>
</table>
