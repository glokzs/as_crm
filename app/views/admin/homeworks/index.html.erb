    <h3>Полученные домашки на тему <%= "#{@lesson.theme.title}"%></h3>

<table class="table-striped w-100 mt-4">
    <tr>
        <th>ФИО</th>
        <th>Статус </th>
        <th>Рецензия</th>
        <th>Оценка</th>
    </tr>
      
      
      <%@students.each do |student|%>
    <tr>
        <td><%= "#{student.first_name} #{student.last_name}"%></td> 
        <% student.homeworks.each do |homework| %>
        <td>
            <%if @students_who_not_sended.include?(student)%> 
                <%= "Домашки нет"%>
            <%else%>
                <%= link_to "Скачать домашку", homework.homework_file %>
            <%end%>
        </td> 
        
        <td>
            <% if homework.review.nil? %>
                <%= link_to "Создать рецензию",new_admin_lesson_review_path%>
            <%else%>
                <%= link_to "Редактровать рецензию",edit_admin_lesson_review_path(@lesson,homework.review) %>
            <td><%= homework.review.rate%></td>
            <%end%>
            
        </td>

        
        <%end%> 
    <tr>
    <%end%>